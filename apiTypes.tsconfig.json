{
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts"
    ],
    "include": [
        "../website-api/**/*dto.ts"
    ],
    "compilerOptions": {
        "declaration": true,
        "module": "System",
        "outFile": "typings/apiTypes.js",
        "resolveJsonModule": false,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "baseUrl": "../../website-api",
        "strictPropertyInitialization": false
    }
}